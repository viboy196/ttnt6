@model IEnumerable<QLNS.Models.entity.HopDong>

@{
    ViewBag.Title = "KetQuaTimKiem";
    Layout = "~/Views/Shared/QLNS.cshtml";
}

<h2>Kết quả tìm kiếm hợp đồng</h2>
<div>@ViewBag.ThongBao</div>
<div class="col-md-4">
    <div class="form-search">
        @using (Html.BeginForm("KetQuaTimKiem", "HopDong", FormMethod.Post))
        {
            @Html.TextBox("timkiem", "", htmlAttributes: new { @class = "boxTimkiem", @placeholder = "Tìm kiếm ..." })
            @*button type="submit" class="btn" value="">click me</button>*@
            <input type="submit" value="Tìm" />
            @*<button type="submit"><i class="fa fa-search" aria-hidden="true"></i></button>*@
